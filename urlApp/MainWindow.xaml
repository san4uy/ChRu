<Window x:Class="urlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:urlApp"
        mc:Ignorable="d"
        Title="ChinApp" Height="450" Width="800" Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <Grid>
        <DataGrid x:Name="dgTranslater" LoadingRow="DataGrid_LoadingRow" FontSize="15" FontWeight="Bold" Margin="5" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path = WChina}" Header="Chinese" Width="*"/>
                <DataGridTextColumn Binding="{Binding Path = WTranscription}" Header="Transcription" Width="*"/>
                <DataGridTextColumn Binding="{Binding Path = WRussia}" Header="Russian" Width="*"/>
                <DataGridTextColumn Binding="{Binding Path = CreationDate}" Header="CreationDate" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="spWords" Orientation="Vertical" Visibility="Collapsed">
            <Viewbox>
                <Label Name="Target" Content="2016 fdfadf dsfa"/>
            </Viewbox>
            <Viewbox>
                <Label Name="Target2" Content="2022 fads  dsafdsf adfs"/>
            </Viewbox>
        </StackPanel> 
    </Grid>
</Window>
